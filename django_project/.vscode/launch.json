    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver", "8000"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "core.settings.dev"
              }
        }
    ]
}